<Window x:Class="ADONET__HW5_Library_Search.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADONET__HW5_Library_Search"
        mc:Ignorable="d"
        Title="LibrarySearch" Height="450" Width="500" Background="#00FA9A" ResizeMode="NoResize">
    <Grid Margin="10,99,0,0">
        <ComboBox Name="Search_ComboBox" Width="210" Height="30" 
                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,-80,0,0" 
                  SelectionChanged="Search_ComboBox_SelectionChanged">
            <ComboBoxItem Content="Authors"/>
            <ComboBoxItem Content="Categories"/>
            <ComboBoxItem Content="Themes"/>

        </ComboBox>


        <ComboBox Name="Display_ComboBox" Width="240" Height="30" 
          HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-81,10,0" 
                  SelectionChanged="Display_ComboBox_SelectionChanged"/>

        <ListBox x:Name="Display_ListBox" Margin="10,0,10,10"/>
    </Grid>
</Window>
